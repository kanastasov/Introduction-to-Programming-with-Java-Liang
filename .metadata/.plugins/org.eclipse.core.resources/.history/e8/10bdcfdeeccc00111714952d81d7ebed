package Exercises;

public class Pyramid_4_17 
{
	public static void main(String[] args) 
	{
		for(int i=1; i<9; i++)
		{
			for(int j=1; j<i; j++)
			{
				System.out.print(" " + j + " ");
				
				
			}
			System.out.println();
		}
		System.out.println();
		
//		for(int i=1; i<7; i++)
//		{
//			for(int j=7; j>i; j--)
//			{
//				System.out.print(  j + " ");
//				
//				
//			}
//			System.out.println();
//		}
		
		 int x = 7;

	        for (int i = 1; i <= x; i++) {

	            for (int j = 1; j <= x - i; j++)
	                System.out.print("   ");

	            for (int k = i; k >= 1; k--)
	                System.out.print((k >= 10) ?+ k : "  " + k);

	            for (int k = 2; k <=i; k++)
	                System.out.print((k >= 10) ?+ k : "  " + k);
	            System.out.println();
			
	}

}
