
public class PrimeNumbers_10_05 
{

	public static void main(String[] args) 
	{
		
		int perfectNum = 6;
		int temp = 0;
			for(int i=2; i< 100; i++)
			{
				if(perfectNum % i == 0 && perfectNum > i)
				{
					System.out.println("Factores are: " + i);
						temp += i;
						
						if(perfectNum == (temp + 1))
						{
							System.out.println( perfectNum + " is perfect: " );
						}
				}
			}	    

	}

}
